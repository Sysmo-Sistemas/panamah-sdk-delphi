type

  TTestSecaoTestCase = class(TPanamahTestCase)
  private
    function GetFixturePath(const AFilename: string): string;
    procedure OnError(Error: Exception);
  published
    procedure TestSendingSecao;
  end;

implementation

{ TTestSecaoTestCase }

function TTestSecaoTestCase.GetFixturePath(const AFilename: string): string;
begin
  Result := Concat(GetCurrentDir, '\Models\Fixtures\', AFilename);
end;

procedure TTestSecaoTestCase.OnError(Error: Exception);
begin
  Assert(False, Error.Message);
end;

procedure TTestSecaoTestCase.TestSendingSecao;
var
  JSON: string;
  Secao: IPanamahSecao;
begin
  JSON := TFile.ReadAllText(GetFixturePath('secao.json'));
  Secao := TPanamahSecao.FromJSON(JSON);
  with TPanamahStream.GetInstance do
  begin
    OnError := Self.OnError;
    Init(
      GetTestVariable('AUTHORIZATION_TOKEN'),
      GetTestVariable('SECRET'),
      GetTestVariable('ASSINANTE_ID')
    );
    Save(Secao);
    Flush;
  end;
end;

initialization
  RegisterTest(TTestSecaoTestCase.Suite);

end.
